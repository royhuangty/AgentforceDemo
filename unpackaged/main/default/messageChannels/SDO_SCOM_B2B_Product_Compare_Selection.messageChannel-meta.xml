<?xml version="1.0" encoding="UTF-8"?>
<LightningMessageChannel xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>Message Channel to pass product compare selection Events</description>
    <isExposed>true</isExposed>
    <lightningMessageFields>
        <description>This is the selected product</description>
        <fieldName>productId</fieldName>
    </lightningMessageFields>
    <lightningMessageFields>
        <description>This is a boolean value</description>
        <fieldName>isSelected</fieldName>
    </lightningMessageFields>
    <lightningMessageFields>
        <description>This is a Json representation of the selected product</description>
        <fieldName>productDetails</fieldName>
    </lightningMessageFields>
    <masterLabel>B2B Product Compare Selection</masterLabel>
</LightningMessageChannel>
